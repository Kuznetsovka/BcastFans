<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" maxHeight="1280.0" maxWidth="1000.0" prefHeight="500.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.systemair.bcastfans.controller.TableController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="BCastFans" wrapText="true">
        <font>
            <Font name="Chiller" size="24.0"/>
        </font>
    </Label>
    <HBox spacing="20.0">
        <VBox prefWidth="400.0" spacing="10.0">
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Отрицательный допуск"/>
                <TextField fx:id="fieldNegativeLimit" alignment="CENTER_RIGHT" maxWidth="50.0" text="0"/>
            </HBox>
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Положительный допуск"/>
                <TextField fx:id="fieldPositiveLimit" alignment="CENTER_RIGHT" maxWidth="50.0" text="100"/>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="400.0">
                <CheckBox fx:id="checkboxCustomPath" mnemonicParsing="false" onAction="#customPath" selected="true"/>
                <TextField fx:id="fieldPathDownloading" prefHeight="25.0" prefWidth="500.0"/>
            </HBox>
        </VBox>

        <VBox alignment="TOP_RIGHT" prefHeight="95.0" prefWidth="590.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <ProgressBar fx:id="progressBar" progress="0.0" visible="false">
            </ProgressBar>
            <Label fx:id="labelProgressBar" text="Посчитано установок:" visible="false"/>
            <Label fx:id="labelTimeLong" text="Label" visible="false"/>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <padding>
                <Insets top="10.0"/>
            </padding>
        </VBox>
    </HBox>
    <HBox prefHeight="500.0">

        <TableView fx:id="table" maxHeight="500" minWidth="830" prefHeight="324.0" prefWidth="830.0">
            <columns>
                <TableColumn fx:id="columnChoose" prefWidth="34.0" resizable="false">
                    <graphic>
                        <CheckBox fx:id="checkBox" mnemonicParsing="false" onAction="#checkBoxInitialize"
                                  prefHeight="20.0" prefWidth="10.0"/>
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="columnNumberSystem" prefWidth="50.0" text="#"/>
                <TableColumn fx:id="columnAirFlow" prefWidth="75.0" text="Расход"/>
                <TableColumn fx:id="columnAirDrop" prefWidth="50.0" text="Потери"/>
                <TableColumn fx:id="columnTypeMontage" prefWidth="120.0" text="Тип монтажа"/>
                <TableColumn fx:id="columnSubType" prefWidth="120.0" text="Тип установки"/>
            </columns>
            <columns>
                <TableColumn fx:id="columnModel" prefWidth="140.0" text="Модель"/>
                <TableColumn fx:id="columnArticle" prefWidth="60.0" text="Артикул"/>
                <TableColumn fx:id="columnPower" prefWidth="70.0" text="Мощность"/>
                <TableColumn fx:id="columnPhase" prefWidth="60.0" text="Фазность"/>
                <TableColumn fx:id="columnPrice" prefWidth="50.0" text="Цена"/>
            </columns>
        </TableView>
        <VBox spacing="10.0">
            <VBox spacing="20.0">
                <Button mnemonicParsing="false" onAction="#load" prefWidth="80.0" text="Load"/>
                <Button mnemonicParsing="false" onAction="#save" prefWidth="80.0" text="Save as"/>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <padding>
                    <Insets bottom="20.0" left="20.0"/>
                </padding>
            </VBox>
            <VBox prefWidth="100.0">

                <Button mnemonicParsing="false" onAction="#clear" prefWidth="80.0" text="Clear"/>

                <padding>
                    <Insets bottom="10.0" left="20.0" top="10.0"/>
                </padding>
            </VBox>
            <VBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">

                <Button alignment="CENTER" mnemonicParsing="false" onAction="#calculate" prefWidth="80.0"
                        text="Calculate"/>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#stop" prefWidth="80.0" text="СТОП"/>

                <padding>
                    <Insets left="20.0" top="20.0"/>
                </padding>
            </VBox>
        </VBox>
    </HBox>
</VBox>
